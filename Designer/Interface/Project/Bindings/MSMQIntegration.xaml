<Grid x:Class="WCFArchitect.Interface.Project.Bindings.MSMQIntegration" x:ClassModifier="internal"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d" 
	xmlns:c1="http://schemas.componentone.com/wpf/Basic"
	xmlns:c1datetime="http://schemas.componentone.com/wpf/DateTimeEditors"
	xmlns:pc="clr-namespace:Prospective.Controls;assembly=Prospective.Controls"
	xmlns:Bindings="clr-namespace:WCFArchitect.Interface.Project.Bindings"
	xmlns:InRoot="clr-namespace:WCFArchitect.Interface"
	d:DesignHeight="750" d:DesignWidth="750" DataContext="{Binding RelativeSource={RelativeSource Self}}" >
	<Grid.Resources>
		<Bindings:DeadLetterQueueConverter x:Key="DeadLetterQueueConverter" />
		<Bindings:ReceiveErrorHandlingConverter x:Key="ReceiveErrorHandlingConverter" />
		<Bindings:MsmqMessageSerializationFormatConverter x:Key="MsmqMessageSerializationFormatConverter" />
		<InRoot:ProjectTypeVisibilityConverter x:Key="ProjectTypeVisibilityConverter" />
		<InRoot:ProjectTypeEnabledConverter x:Key="ProjectTypeEnabledConverter" />
		<InRoot:ProjectTypeReadOnlyConverter x:Key="ProjectTypeReadOnlyConverter" />
	</Grid.Resources>
	<Grid.RowDefinitions>
		<RowDefinition Height="Auto" />
		<RowDefinition Height="*" />
	</Grid.RowDefinitions>
	<Border BorderBrush="#CCCCCC" BorderThickness="0,0,0,1" Padding="0,0,0,5" Margin="0,0,0,5" Grid.Row="0">
		<StackPanel Orientation="Horizontal">
			<Image Source="pack://application:,,,/WCFArchitect;component/Icons/X32/MSMQIntegration.png" UseLayoutRounding="True" Height="32" Width="32" Stretch="Uniform" Margin="5,0"/>
			<TextBlock Text="{Binding Path=Binding.Name}" Foreground="#555555" FontSize="18" Height="Auto" VerticalAlignment="Center" />
			<TextBlock Text=" - MSMQ Integration Binding" Foreground="#555555" FontSize="18" Height="Auto" VerticalAlignment="Center" />
		</StackPanel>
	</Border>
	<Grid Grid.Row="1">
		<Grid.RowDefinitions>
			<RowDefinition Height="35" />
			<RowDefinition Height="95" />
			<RowDefinition Height="185" />
			<RowDefinition Height="125" />
			<RowDefinition Height="65" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Grid Grid.Row="0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			<Label Content="Display Name:" Height="Auto" HorizontalAlignment="Left" Margin="5,6,0,0" VerticalAlignment="Top" />
			<pc:TextBox Text="{Binding Path=Binding.Name}" Name="DisplayName" Height="23" Margin="97,7,5,0" VerticalAlignment="Top" IsReadOnly="{Binding Path=Binding, Converter={StaticResource ProjectTypeReadOnlyConverter}}" ToolTip="{Binding Path=Binding.Name}"  />
			<Label Content="Code Name:" Height="Auto" HorizontalAlignment="Left" Margin="5,6,0,0" VerticalAlignment="Top" Grid.Column="1" />
			<pc:TextBox Text="{Binding Path=Binding.CodeName}" Name="CodeName" Height="23" Margin="86,7,5,0" VerticalAlignment="Top" Grid.Column="1" IsReadOnly="{Binding Path=Binding, Converter={StaticResource ProjectTypeReadOnlyConverter}}" TextChanged="CodeName_TextChanged" Validate="CodeName_Validate" ToolTip="{Binding Path=Binding.CodeName}" />
			<Label Content="Namespace:" Height="Auto" HorizontalAlignment="Left" Margin="5,6,0,0" VerticalAlignment="Top" Grid.Column="2" />
			<pc:TextBox Text="{Binding Path=Binding.Namespace}" Name="Namespace" Height="23" Margin="85,7,5,0" VerticalAlignment="Top" Grid.Column="2" IsReadOnly="{Binding Path=Binding, Converter={StaticResource ProjectTypeReadOnlyConverter}}" TextChanged="Namespace_TextChanged" Validate="Namespace_Validate" ToolTip="{Binding Path=Binding.Namespace}" />
		</Grid>
		<Grid Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="385" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<GroupBox Header="Timeouts" Margin="5,0,0,0" Grid.Column="0">
				<Grid>
					<Label Content="Open Timeout:" Height="28" HorizontalAlignment="Left" Margin="5,6,0,0" VerticalAlignment="Top" />
					<c1datetime:C1TimeEditor Value="{Binding Path=Binding.OpenTimeout, Mode=TwoWay}" Name="OpenTimeout"  HorizontalAlignment="Left" Margin="100,7,0,0" Format="TimeSpan" Height="24" VerticalAlignment="Top" Width="70" IsReadOnly="{Binding Path=Binding, Converter={StaticResource ProjectTypeReadOnlyConverter}}" />
					<Label Content="Close Timeout:" Height="28" HorizontalAlignment="Left" Margin="185,6,0,0" VerticalAlignment="Top" />
					<c1datetime:C1TimeEditor Value="{Binding Path=Binding.CloseTimeout, Mode=TwoWay}" Name="CloseTimeout" HorizontalAlignment="Left" Margin="291,7,0,0" Format="TimeSpan" Height="24" VerticalAlignment="Top" Width="70" IsReadOnly="{Binding Path=Binding, Converter={StaticResource ProjectTypeReadOnlyConverter}}" />
					<Label Content="Send Timeout:" Height="28" HorizontalAlignment="Left" Margin="5,36,0,0" VerticalAlignment="Top" />
					<c1datetime:C1TimeEditor Value="{Binding Path=Binding.SendTimeout, Mode=TwoWay}" Name="SendTimeout" HorizontalAlignment="Left" Margin="100,37,0,0" Format="TimeSpan" Height="24" VerticalAlignment="Top" Width="70" IsReadOnly="{Binding Path=Binding, Converter={StaticResource ProjectTypeReadOnlyConverter}}" />
					<Label Content="Receive Timeout:" Height="28" HorizontalAlignment="Left" Margin="185,36,0,0" VerticalAlignment="Top" />
					<c1datetime:C1TimeEditor Value="{Binding Path=Binding.ReceiveTimeout, Mode=TwoWay}" Name="ReceiveTimeout" HorizontalAlignment="Left" Margin="291,37,0,0" Format="TimeSpan" Height="24" VerticalAlignment="Top" Width="70" IsReadOnly="{Binding Path=Binding, Converter={StaticResource ProjectTypeReadOnlyConverter}}" />
				</Grid>
			</GroupBox>
			<GroupBox Header="Addresses" Margin="5,0,5,0" Grid.Column="1">
				<Grid>
					<Label Content="Endpoint Address:" Height="28" HorizontalAlignment="Left" Margin="5,6,0,0" VerticalAlignment="Top" />
					<pc:TextBox Text="{Binding Path=Binding.EndpointAddress}" Height="23" Margin="121,7,5,0" VerticalAlignment="Top" Name="EndpointAddress" IsReadOnly="{Binding Path=Binding, Converter={StaticResource ProjectTypeReadOnlyConverter}}" TextChanged="EndpointAddress_TextChanged" Validate="EndpointAddress_Validate" ToolTip="{Binding Path=Binding.EndpointAddress}" />
					<Label Content="Listener Address:" Height="28" HorizontalAlignment="Left" Margin="5,36,0,0" VerticalAlignment="Top" />
					<pc:TextBox Text="{Binding Path=Binding.ListenAddress}" Height="23" Margin="121,37,5,0" VerticalAlignment="Top" Name="ListenAddress" IsReadOnly="{Binding Path=Binding, Converter={StaticResource ProjectTypeReadOnlyConverter}}" TextChanged="ListenAddress_TextChanged" Validate="ListenAddress_Validate" ToolTip="{Binding Path=Binding.ListenAddress}" />
				</Grid>
			</GroupBox>
		</Grid>
		<Grid Grid.Row="2">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<GroupBox Header="Service" Margin="5,5,0,0" Grid.Column="0">
				<Grid>
					<Label Content="Security:" Height="Auto" HorizontalAlignment="Left" Margin="5,6,0,0" VerticalAlignment="Top" Width="Auto" />
					<TextBlock Text="No Security Selected" Height="Auto" Margin="100,6,111,0" Padding="5" Name="Security" VerticalAlignment="Top" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" />
					<Button Content="Select" Height="23" HorizontalAlignment="Right" Margin="0,7,5,0" Name="SelectSecurity" VerticalAlignment="Top" Width="100" IsHitTestVisible="{Binding Path=Binding, Converter={StaticResource ProjectTypeEnabledConverter}}" Click="SelectSecurity_Click" />
					<Label Content="Use MSMQ Tracing:" Height="Auto" HorizontalAlignment="Left" Margin="5,35,0,0" VerticalAlignment="Top" Width="Auto" />
					<ToggleButton Content="No" Height="23" HorizontalAlignment="Right" IsChecked="{Binding Path=Binding.UseMSMQTracing}" Margin="0,36,5,0" Name="UseMSMQTracing" VerticalAlignment="Top" Width="100" IsHitTestVisible="{Binding Path=Binding, Converter={StaticResource ProjectTypeEnabledConverter}}" Checked="UseMSMQTracing_Checked" Unchecked="UseMSMQTracing_Unchecked"  />
					<Label Content="Use Source Journal:" Height="Auto" HorizontalAlignment="Left" Margin="5,64,0,0" VerticalAlignment="Top" Width="Auto" />
					<ToggleButton Content="No" Height="23" HorizontalAlignment="Right" IsChecked="{Binding Path=Binding.UseSourceJournal}" Margin="0,65,5,0" Name="UseSourceJournal" VerticalAlignment="Top" Width="100" IsHitTestVisible="{Binding Path=Binding, Converter={StaticResource ProjectTypeEnabledConverter}}" Checked="UseSourceJournal_Checked" Unchecked="UseSourceJournal_Unchecked" />
					<Label Content="Validity Duration:" Height="28" HorizontalAlignment="Left" Margin="5,93,0,0" VerticalAlignment="Top" />
					<c1datetime:C1TimeEditor Format="TimeSpan" Height="24" HorizontalAlignment="Right" Margin="0,94,35,0" Value="{Binding Path=Binding.ValidityDuration, Mode=TwoWay}" Name="ValidityDuration" VerticalAlignment="Top" Width="70" IsReadOnly="{Binding Path=Binding, Converter={StaticResource ProjectTypeReadOnlyConverter}}" />
					<Label Content="Durable:" Height="Auto" HorizontalAlignment="Left" Margin="4,123,0,0" VerticalAlignment="Top" Width="Auto" />
					<ToggleButton Content="No" Height="23" HorizontalAlignment="Right" IsChecked="{Binding Path=Binding.Durable}" Margin="0,124,6,0" Name="Durable" VerticalAlignment="Top" Width="100" IsHitTestVisible="{Binding Path=Binding, Converter={StaticResource ProjectTypeEnabledConverter}}" Checked="Durable_Checked" Unchecked="Durable_Unchecked" />
				</Grid>
			</GroupBox>
			<GroupBox Header="Connection" Margin="5,5,5,0" Grid.Column="1" >
				<Grid>
					<Label Content="Exactly Once:" Height="Auto" HorizontalAlignment="Left" Margin="5,6,0,0" VerticalAlignment="Top" Width="Auto" />
					<ToggleButton Content="No" Height="23" HorizontalAlignment="Right" IsChecked="{Binding Path=Binding.ExactlyOnce}" Margin="0,7,5,0" Name="ExactlyOnce" VerticalAlignment="Top" Width="100" IsHitTestVisible="{Binding Path=Binding, Converter={StaticResource ProjectTypeEnabledConverter}}" Checked="ExactlyOnce_Checked" Unchecked="ExactlyOnce_Unchecked" />
					<Label Content="Max Retry Cycles:" Margin="5,35,0,0" Height="Auto" VerticalAlignment="Top" HorizontalAlignment="Left" Width="Auto" />
					<c1:C1NumericBox Value="{Binding Path=Binding.MaxRetryCycles}" HorizontalAlignment="Right" Margin="0,37,45,0" VerticalAlignment="Top" Width="60" ShowButtons="False" Name="MaxRetryCycles" IsReadOnly="{Binding Path=Binding, Converter={StaticResource ProjectTypeReadOnlyConverter}}" ValueChanged="MaxRetryCycles_ValueChanged"  />
					<Label Content="Retry Cycle Delay:" Height="28" HorizontalAlignment="Left" Margin="5,64,0,0" VerticalAlignment="Top" />
					<c1datetime:C1TimeEditor Format="TimeSpan" Height="24" HorizontalAlignment="Right" Margin="0,64,35,0" Value="{Binding Path=Binding.RetryCycleDelay, Mode=TwoWay}" Name="RetryCycleDelay" VerticalAlignment="Top" Width="70" IsReadOnly="{Binding Path=Binding, Converter={StaticResource ProjectTypeReadOnlyConverter}}" />
					<Label Content="Time To Live:" Height="28" HorizontalAlignment="Left" Margin="5,94,0,0" VerticalAlignment="Top" />
					<c1datetime:C1TimeEditor Format="TimeSpan" Height="24" HorizontalAlignment="Right" Margin="0,94,35,0" Value="{Binding Path=Binding.TimeToLive, Mode=TwoWay}" Name="TimeToLive" VerticalAlignment="Top" Width="70" IsReadOnly="{Binding Path=Binding, Converter={StaticResource ProjectTypeReadOnlyConverter}}" />
				</Grid>
			</GroupBox>
		</Grid>
		<Grid Grid.Row="3">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<GroupBox Header="Queue" Margin="5,5,0,0" Grid.Column="0" >
				<Grid>
					<Label Content="Dead Letter Queue:" Height="28" HorizontalAlignment="Left" Margin="5,6,0,0" VerticalAlignment="Top" />
					<ComboBox Height="23" Margin="190,7,5,0" SelectedIndex="{Binding Path=Binding.ReceiveErrorHandling, Converter={StaticResource ReceiveErrorHandlingConverter}}" VerticalAlignment="Top" IsHitTestVisible="{Binding Path=Binding, Converter={StaticResource ProjectTypeEnabledConverter}}" >
						<ComboBoxItem Content="Fault" />
						<ComboBoxItem Content="Drop" />
						<ComboBoxItem Content="Reject" />
						<ComboBoxItem Content="Move" />
					</ComboBox>
					<Label Content="Custom Dead Letter Queue:" Height="Auto" HorizontalAlignment="Left" Margin="5,34,0,0" VerticalAlignment="Top" Width="Auto" />
					<pc:TextBox Text="{Binding Path=Binding.CustomDeadLetterQueue}" Height="23" Margin="168,35,5,0" VerticalAlignment="Top" Name="CustomDeadLetterQueue" IsReadOnly="{Binding Path=Binding, Converter={StaticResource ProjectTypeReadOnlyConverter}}" TextChanged="CustomDeadLetterQueue_TextChanged" Validate="CustomDeadLetterQueue_Validate" ToolTip="{Binding Path=Binding.CustomDeadLetterQueue}" />
					<Label Content="Serialization Format:" Height="28" HorizontalAlignment="Left" Margin="5,63,0,0" VerticalAlignment="Top" />
					<ComboBox Height="23" Margin="190,64,5,0" SelectedIndex="{Binding Path=Binding.QueueTransferProtocol, Converter={StaticResource MsmqMessageSerializationFormatConverter}}" VerticalAlignment="Top" IsHitTestVisible="{Binding Path=Binding, Converter={StaticResource ProjectTypeEnabledConverter}}" >
						<ComboBoxItem Content="XML" />
						<ComboBoxItem Content="Binary" />
						<ComboBoxItem Content="ActiveX" />
						<ComboBoxItem Content="Byte Array" />
						<ComboBoxItem Content="Stream" />
					</ComboBox>
				</Grid>
			</GroupBox>
			<GroupBox Header="Receive" Margin="5,5,5,0" Grid.Column="1" >
				<Grid>
					<Label Content="Receive Context Enabled:" Height="Auto" HorizontalAlignment="Left" Margin="5,6,0,0" VerticalAlignment="Top" Width="Auto" />
					<ToggleButton Content="No" Height="23" HorizontalAlignment="Right" IsChecked="{Binding Path=Binding.ReceiveContextEnabled}" Margin="0,7,5,0" Name="ReceiveContextEnabled" VerticalAlignment="Top" Width="100" IsHitTestVisible="{Binding Path=Binding, Converter={StaticResource ProjectTypeEnabledConverter}}" Checked="ReceiveContextEnabled_Checked" Unchecked="ReceiveContextEnabled_Unchecked" />
					<Label Content="Receive Error Handling:" Height="28" HorizontalAlignment="Left" Margin="5,34,0,0" VerticalAlignment="Top" />
					<ComboBox Height="23" Margin="190,36,5,0" SelectedIndex="{Binding Path=Binding.ReceiveErrorHandling, Converter={StaticResource ReceiveErrorHandlingConverter}}" VerticalAlignment="Top" IsHitTestVisible="{Binding Path=Binding, Converter={StaticResource ProjectTypeEnabledConverter}}" >
						<ComboBoxItem Content="Fault" />
						<ComboBoxItem Content="Drop" />
						<ComboBoxItem Content="Reject" />
						<ComboBoxItem Content="Move" />
					</ComboBox>
					<Label Content="Receive Retry Count:" Height="Auto" HorizontalAlignment="Left" Margin="5,63,0,0" VerticalAlignment="Top" Width="Auto" />
					<c1:C1NumericBox HorizontalAlignment="Right" Margin="0,65,45,0" Value="{Binding Path=Binding.ReceiveRetryCount}" VerticalAlignment="Top" Width="60" ShowButtons="False" Name="ReceiveRetryCount" IsReadOnly="{Binding Path=Binding, Converter={StaticResource ProjectTypeReadOnlyConverter}}" ValueChanged="ReceiveRetryCount_ValueChanged" />
				</Grid>
			</GroupBox>
		</Grid>
		<Grid Grid.Row="4">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="295" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<GroupBox Header="Sizes" Margin="5,5,0,0" Grid.Column="0">
				<Grid>
					<Label Content="Max Received Message Size:" Height="28" HorizontalAlignment="Left" Margin="5,6,0,0" VerticalAlignment="Top" />
					<pc:TextBox Name="MaxReceivedMessageSize" Height="23" HorizontalAlignment="Left" Margin="171,7,0,0" VerticalAlignment="Top" Width="100" IsReadOnly="{Binding Path=Binding, Converter={StaticResource ProjectTypeReadOnlyConverter}}" TextChanged="MaxReceivedMessageSize_TextChanged" />
				</Grid>
			</GroupBox>
		</Grid>
	</Grid>
</Grid>