											<MultiBinding StringFormat="Client: {0} {1}">
												<Binding Path="ReturnType.TypeName" />
												<Binding Path="ClientName" />
											</MultiBinding>
										</TextBlock.Text>
									</TextBlock>
								</StackPanel>
							</Border.ToolTip>
							<Grid Name="ItemGrid">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="*" />
									<ColumnDefinition Width="Auto" />
								</Grid.ColumnDefinitions>
