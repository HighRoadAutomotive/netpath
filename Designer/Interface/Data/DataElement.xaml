<Grid x:Class="WCFArchitect.Interface.Data.DataElement" x:ClassModifier="internal"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
		xmlns:pc="clr-namespace:Prospective.Controls;assembly=Prospective.Controls"
		xmlns:Data="clr-namespace:WCFArchitect.Interface.Data"
		MinWidth="800" DataContext="{Binding RelativeSource={RelativeSource Self}}" IsHitTestVisible="True" Focusable="True" GotFocus="Grid_GotFocus" SizeChanged="Grid_SizeChanged" x:Name="MainGrid" >
	<Grid.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="pack://application:,,,/WCFArchitect;component/Themes/Colors.xaml" />
				<ResourceDictionary Source="pack://application:,,,/WCFArchitect;component/Themes/Generic.xaml" />
				<ResourceDictionary>
					<Data:DataScopeConverter x:Key="DataScopeConverter" />
					<Data:DataScopeNameConverter x:Key="DataScopeNameConverter" />
				</ResourceDictionary>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Grid.Resources>
	<Border BorderThickness="0,0,0,1" BorderBrush="{StaticResource GridLineBrush}" >
		<Grid Name="ItemsGrid" Grid.Column="0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Name="ItemsGridCD1" Width="0.75*" />
				<ColumnDefinition Name="ItemsGridCD2" Width="1.25*" />
				<ColumnDefinition Name="ItemsGridCD3" Width="2*" />
				<ColumnDefinition MaxWidth="55" />
				<ColumnDefinition MinWidth="31" MaxWidth="31" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="27" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>
			<Border Grid.Column="0" BorderThickness="0,0,1,0" BorderBrush="{StaticResource GridLineBrush}" >
				<Grid>
					<Border Name="ScopeBorder" BorderThickness="1" BorderBrush="{StaticResource BoxFocusedColor}" Visibility="Collapsed" >
						<c1:C1ComboBox SelectedIndex="{Binding Path=Data.Scope, Converter={StaticResource DataScopeConverter}}" VerticalContentAlignment="Center" Margin="0" Name="Scope" BorderThickness="0" GotFocus="Scope_GotFocus" LostFocus="Scope_LostFocus" SelectedIndexChanged="Scope_SelectedIndexChanged" >
							<c1:C1ComboBox.Items>
								<c1:C1ComboBoxItem Content="Public" />
								<c1:C1ComboBoxItem Content="Protected" />
								<c1:C1ComboBoxItem Content="Private" />
								<c1:C1ComboBoxItem Content="Internal" />
								<c1:C1ComboBoxItem Content="Protected Internal" />
							</c1:C1ComboBox.Items>
						</c1:C1ComboBox>
					</Border>
					<pc:TextBox Name="ScopeName" Text="{Binding Path=Data.Scope}" VerticalContentAlignment="Center" BorderThickness="0" BorderBrush="Transparent" Background="Transparent" CornerRadius="0" IsHaloEnabled="False" GotFocus="ScopeName_GotFocus" />
				</Grid>
			</Border>
			<Border Grid.Column="1" BorderThickness="0,0,1,0" BorderBrush="{StaticResource GridLineBrush}" >
				<pc:TextBox Name="DataType" Text="{Binding Path=Data.DataType}" IsHitTestVisible="True" VerticalContentAlignment="Center" BorderThickness="1" BorderBrush="Transparent" Background="Transparent" CornerRadius="0" IsHaloEnabled="False" PreviewKeyDown="DataType_PreviewKeyDown" GotFocus="DataType_GotFocus" LostFocus="DataType_LostFocus" Validate="DataType_Validate" ToolTip="{Binding Path=Data.DataType}"  />
			</Border>
			<Border Grid.Column="2" BorderThickness="0,0,1,0" BorderBrush="{StaticResource GridLineBrush}" >
				<pc:TextBox Name="ElementName" Text="{Binding Path=Data.Name}" IsHitTestVisible="True" VerticalContentAlignment="Center" BorderThickness="1" BorderBrush="Transparent" Background="Transparent" CornerRadius="0" IsHaloEnabled="False" PreviewKeyDown="ElementName_PreviewKeyDown" GotFocus="ElementName_GotFocus" LostFocus="ElementName_LostFocus" ToolTip="{Binding Path=Data.Name}" />
			</Border>
			<Border IsHitTestVisible="True" Grid.Column="3" BorderThickness="0" BorderBrush="{StaticResource GridLineBrush}" >
				<CheckBox IsChecked="{Binding Path=Data.IsHidden}" HorizontalAlignment="Center" VerticalAlignment="Center" />
			</Border>
			<Border Name="DetailsGrid" Visibility="Visible" Grid.Row="1" Grid.ColumnSpan="4">
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
					</Grid.RowDefinitions>
					<Border Name="OptionsGrid" Grid.Row="0" BorderThickness="0,1,0,0" Padding="2.5,0" BorderBrush="{StaticResource GridLineBrush}" UseLayoutRounding="True" >
						<Grid Grid.Row="0">
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto" />
							</Grid.RowDefinitions>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="1*" />
								<ColumnDefinition Width="1*" />
								<ColumnDefinition Width="1*" />
								<ColumnDefinition Width="1*" />
								<ColumnDefinition Width="1*" />
								<ColumnDefinition Width="1*" />
								<ColumnDefinition Width="95" />
							</Grid.ColumnDefinitions>
							<ToggleButton Grid.Column="0" Content="Is Data Member" Margin="2.5,5" Padding="2,0" Height="23" IsChecked="{Binding Path=Data.IsDataMember}" Name="IsDataMember" ToolTip="Determines if the member is marked as a member of the data contract." />
							<ToggleButton Grid.Column="1" Content="Is Read-Only" Margin="2.5,5" Padding="2,0" Height="23" IsChecked="{Binding Path=Data.IsReadOnly}" Name="IsReadOnly" />
							<ToggleButton Grid.Column="2" Content="Is Required" Margin="2.5,5" Padding="2,0" Height="23" IsChecked="{Binding Path=Data.IsRequired}" Name="IsRequired" ToolTip="The member is required by the data contract." />
							<ToggleButton Grid.Column="3" Content="Do Not Emit Default Value" Margin="2.5,5" Padding="2,0" Height="23" IsChecked="{Binding Path=Data.EmitDefaultValue}" Name="EmitDefaultValue" ToolTip="Force WCF emit the default value for the type if no value is provided." />
							<ToggleButton Grid.Column="4" Content="WPF Binding" Margin="2.5,5" Padding="2,0" Height="23" IsChecked="{Binding Path=Data.GenerateWPFBinding}" Name="GenerateWPFBinding" />
							<ToggleButton Grid.Column="5" Content="Is Attached" Margin="2.5,5" Padding="2,0" Height="23" IsEnabled="{Binding ElementName=GenerateWPFBinding, Path=IsChecked}" IsChecked="{Binding Path=Data.IsAttached}" Name="IsAttached" />
							<Label Grid.Column="6" Content="Order:" Height="Auto" HorizontalAlignment="Left" VerticalAlignment="Center" Width="Auto" />
							<c1:C1NumericBox Margin="45,5,6,0" Name="Order" ShowButtons="False" Value="{Binding Path=Data.Order}" VerticalAlignment="Top" Grid.Column="6" ValueChanged="Order_ValueChanged" />
						</Grid>
					</Border>
					<Border Name="WPFGrid" Grid.Row="1" Visibility="{Binding Path=Data.GenerateWPFBinding, Converter={StaticResource BoolVisibilityConverter}}" BorderThickness="0,1,0,0" BorderBrush="{StaticResource GridLineBrush}" UseLayoutRounding="True">
						<Grid Grid.Row="0">
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto" />
							</Grid.RowDefinitions>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="{Binding ElementName=ItemsGridCD1, Path=Width}" />
								<ColumnDefinition Width="{Binding ElementName=ItemsGridCD2, Path=Width}" />
								<ColumnDefinition Width="{Binding ElementName=ItemsGridCD3, Path=Width}" />
								<ColumnDefinition Width="55" />
							</Grid.ColumnDefinitions>
							<Border Grid.Column="0" BorderThickness="0,0,1,0" BorderBrush="{StaticResource GridLineBrush}" >
								<TextBlock Name="WPFDataMode" Padding="5,0" VerticalAlignment="Center" HorizontalAlignment="Right" />
							</Border>
							<Border Grid.Column="1" BorderThickness="0,0,1,0" BorderBrush="{StaticResource GridLineBrush}" >
								<pc:TextBox Height="27" Margin="0" Text="{Binding Path=Data.WPFDataType}" LabelText="WPF Data Type" BorderThickness="1" BorderBrush="Transparent" CornerRadius="0" IsHaloEnabled="False" Name="WPFDataType" Validate="WPFDataType_Validate" ToolTip="{Binding Path=Data.WPFDataType}" />
							</Border>
							<Border Grid.Column="2" BorderThickness="0,0,1,0" BorderBrush="{StaticResource GridLineBrush}" >
								<pc:TextBox Height="27" Margin="0" Text="{Binding Path=Data.WPFName}" LabelText="WPF Name" BorderThickness="1" BorderBrush="Transparent" CornerRadius="0" IsHaloEnabled="False" Name="WPFName" ToolTip="{Binding Path=Data.WPFName}" />
							</Border>
						</Grid>
					</Border>
					<Border Name="AttributeGrid" Grid.Row="2" Visibility="{Binding Path=Data.IsAttached, Converter={StaticResource BoolVisibilityConverter}}" BorderThickness="0,1,0,0" BorderBrush="{StaticResource GridLineBrush}" UseLayoutRounding="True">
						<Grid Grid.Row="0">
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto" />
							</Grid.RowDefinitions>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="150" />
								<ColumnDefinition Width="1*" />
								<ColumnDefinition Width="1*" />
							</Grid.ColumnDefinitions>
							<ToggleButton Grid.Column="0" Content="Enable Browsing" Margin="5" VerticalAlignment="Top" Padding="2,0" Height="23" IsChecked="{Binding Path=Data.AttachedBrowsable}" Name="AttachedBrowsable" ToolTip="Determines if the attribute can be browsed." />
							<ToggleButton Grid.Column="0" Content="Include Descendants" Margin="5,33,5,5" VerticalAlignment="Top" Padding="2,0" Height="23" IsChecked="{Binding Path=Data.AttachedBrowsableIncludeDescendants}" IsEnabled="{Binding ElementName=AttachedBrowsable, Path=IsChecked}" Name="AttachedBrowsableIncludeDescendants" ToolTip="Determines if the descendants of the attribute can be browsed." />
							<pc:TextBox Grid.Column="1" Margin="5,5,5,5" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" Text="{Binding Path=Data.AttachedTargetTypes}" ToolTip="Please enter the Target Types as a common seperated list." />
							<pc:TextBox Grid.Column="2" Margin="5,5,5,5" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" Text="{Binding Path=Data.AttachedAttributeTypes}" ToolTip="Please enter the Attribute Types as a common seperated list." />
						</Grid>
					</Border>
				</Grid>
			</Border>
			<Border Grid.Column="4" Grid.RowSpan="4" BorderThickness="1,0,0,0" BorderBrush="{StaticResource GridLineBrush}" >
				<Button Name="Delete" Margin="1" Padding="0" Style="{StaticResource ListItemButtonStyle}" Click="Delete_Click">
					<Image Source="pack://application:,,,/WCFArchitect;component/Icons/X16/Delete.png" HorizontalAlignment="Center" VerticalAlignment="Center" UseLayoutRounding="True" Height="16" Width="16" Stretch="Uniform"/>
				</Button>
			</Border>
		</Grid>
	</Border>
</Grid>