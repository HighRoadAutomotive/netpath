<Grid x:Class="WCFArchitect.Interface.Data.DataElement"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:Data="clr-namespace:WCFArchitect.Interface.Data"
	  xmlns:pc="http://schemas.propsectivesoftware.com/pc"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	  DataContext="{Binding RelativeSource={RelativeSource Self}}" 
      mc:Ignorable="d" d:DesignHeight="800" d:DesignWidth="750">
	<Grid.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="pack://application:,,,/WCFArchitect;component/Themes/Colors.xaml" />
				<ResourceDictionary>
					<Data:DataScopeConverter x:Key="DataScopeConverter" />
					<Data:DataScopeNameConverter x:Key="DataScopeNameConverter" />
					<Data:ElementOrderConverter x:Key="ElementOrderConverter" />
					<pc:BoolVisibilityConverter x:Key="BoolVisibilityConverter" />
				</ResourceDictionary>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Grid.Resources>
	<Grid.ColumnDefinitions>
		<ColumnDefinition Width="*" />
	</Grid.ColumnDefinitions>
	<Grid.RowDefinitions>
		<RowDefinition Height="Auto" />
		<RowDefinition Height="Auto" />
		<RowDefinition Height="Auto" />
		<RowDefinition Height="Auto" />
		<RowDefinition Height="Auto" />
	</Grid.RowDefinitions>
	<Grid Name="ServerGrid" Grid.Row="0" >
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="{Binding ElementName=ItemsGridCD1, Path=Width}" />
			<ColumnDefinition Width="{Binding ElementName=ItemsGridCD2, Path=Width}" />
			<ColumnDefinition Width="{Binding ElementName=ItemsGridCD3, Path=Width}" />
			<ColumnDefinition MinWidth="55" MaxWidth="55" />
			<ColumnDefinition MinWidth="55" MaxWidth="55" />
		</Grid.ColumnDefinitions>
		<ComboBox Grid.Column="0" Margin="2" SelectedIndex="{Binding Path=Element.DataScope, Converter={StaticResource DataScopeConverter}}" VerticalContentAlignment="Center" Name="Scope" >
			<ComboBox.Items>
				<ComboBoxItem Content="Public" />
				<ComboBoxItem Content="Protected" />
				<ComboBoxItem Content="Private" />
				<ComboBoxItem Content="Internal" />
				<ComboBoxItem Content="Protected Internal" />
			</ComboBox.Items>
		</ComboBox>
		<Data:TypeSelector Grid.Column="1" Margin="2" x:Name="DataType" OpenType="{Binding Path=Element.DataType}" Project="{Binding Path=Project}" LabelText="Server Type" VerticalContentAlignment="Center" ToolTip="{Binding Path=Element.DataType}"  />
		<pc:TextBox Grid.Column="2" Margin="2" Name="ElementName" Text="{Binding Path=Element.DataName, UpdateSourceTrigger=PropertyChanged}" LabelText="Server Name" VerticalContentAlignment="Center" Validate="ElementName_Validate" ToolTip="{Binding Path=Element.DataName}" />
		<pc:TextBox Grid.Column="3" Margin="2" Name="Order" Text="{Binding Path=Element.Order, Converter={StaticResource ElementOrderConverter}}" Validate="Order_Validate" />
		<CheckBox Grid.Column="4" Margin="2" IsChecked="{Binding Path=Element.IsHidden}" Name="Hidden" HorizontalAlignment="Center" VerticalAlignment="Center" />
	</Grid>
	<Border x:Name="ContractContainer" Grid.Row="1" >
		<Grid Name="ContractGrid" Visibility="{Binding Path=Element.HasClientType, Converter={StaticResource BoolVisibilityConverter}}">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="{Binding ElementName=ItemsGridCD1, Path=Width}" />
				<ColumnDefinition Width="{Binding ElementName=ItemsGridCD2, Path=Width}" />
				<ColumnDefinition Width="{Binding ElementName=ItemsGridCD3, Path=Width}" />
				<ColumnDefinition MinWidth="55" MaxWidth="55" />
				<ColumnDefinition MinWidth="55" MaxWidth="55" />
			</Grid.ColumnDefinitions>
			<ComboBox Grid.Column="0" Margin="2" SelectedIndex="{Binding Path=Element.ClientScope, Converter={StaticResource DataScopeConverter}}" VerticalContentAlignment="Center" Name="ClientScope" >
				<ComboBox.Items>
					<ComboBoxItem Content="Public" />
					<ComboBoxItem Content="Protected" />
					<ComboBoxItem Content="Private" />
					<ComboBoxItem Content="Internal" />
					<ComboBoxItem Content="Protected Internal" />
				</ComboBox.Items>
			</ComboBox>
			<Data:TypeSelector Grid.Column="1" Margin="2" x:Name="ClientType" OpenType="{Binding Path=Element.ClientType}" Project="{Binding}" LabelText="Client Type" VerticalContentAlignment="Center" ToolTip="{Binding Path=Element.ClientType}"  />
			<pc:TextBox Grid.Column="2" Margin="2" Name="ClientElementName" Text="{Binding Path=Element.ClientName, UpdateSourceTrigger=PropertyChanged}" LabelText="Client Name" VerticalContentAlignment="Center" Validate="ElementName_Validate" ToolTip="{Binding Path=Element.ClientName}" />
		</Grid>
	</Border>
	<Border x:Name="XAMLContainer" Grid.Row="2" >
		<Grid Name="XAMLGrid" Visibility="{Binding Path=Element.HasXAMLType, Converter={StaticResource BoolVisibilityConverter}}">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="{Binding ElementName=ItemsGridCD1, Path=Width}" />
				<ColumnDefinition Width="{Binding ElementName=ItemsGridCD2, Path=Width}" />
				<ColumnDefinition Width="{Binding ElementName=ItemsGridCD3, Path=Width}" />
				<ColumnDefinition MinWidth="55" MaxWidth="55" />
				<ColumnDefinition MinWidth="55" MaxWidth="55" />
			</Grid.ColumnDefinitions>
			<ComboBox Grid.Column="0" Margin="2" SelectedIndex="{Binding Path=Element.XAMLScope, Converter={StaticResource DataScopeConverter}}" VerticalContentAlignment="Center" Name="XAMLScope" >
				<ComboBox.Items>
					<ComboBoxItem Content="Public" />
					<ComboBoxItem Content="Protected" />
					<ComboBoxItem Content="Private" />
					<ComboBoxItem Content="Internal" />
					<ComboBoxItem Content="Protected Internal" />
				</ComboBox.Items>
			</ComboBox>
			<Data:TypeSelector Grid.Column="1" Margin="2" x:Name="XAMLType" OpenType="{Binding Path=Element.XAMLType}" Project="{Binding}" LabelText="XAML Type" VerticalContentAlignment="Center" ToolTip="{Binding Path=Element.XAMLType}"  />
			<pc:TextBox Grid.Column="2" Margin="2" Name="XAMLElementName" Text="{Binding Path=Element.XAMLName, UpdateSourceTrigger=PropertyChanged}" LabelText="XAML Name" VerticalContentAlignment="Center" Validate="ElementName_Validate" ToolTip="{Binding Path=Element.XMALName}" />
		</Grid>
	</Border>
	<Border x:Name="AttributeContainer" Grid.Row="3" >
		<Grid Name="AttributeGrid" Visibility="{Binding Path=Element.IsAttached, Converter={StaticResource BoolVisibilityConverter}}">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="150" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<ToggleButton Grid.Column="0" Content="Enable Browsing" Margin="5" VerticalAlignment="Top" Padding="2,0" Height="23" IsChecked="{Binding Path=Element.AttachedBrowsable}" Name="AttachedBrowsable" ToolTip="Determines if the attribute can be browsed." />
			<ToggleButton Grid.Column="0" Content="Include Descendants" Margin="5,33,5,5" VerticalAlignment="Top" Padding="2,0" Height="23" IsChecked="{Binding Path=Element.AttachedBrowsableIncludeDescendants}" IsEnabled="{Binding ElementName=AttachedBrowsable, Path=IsChecked}" Name="AttachedBrowsableIncludeDescendants" ToolTip="Determines if the descendants of the attribute can be browsed." />
			<pc:TextBox Name="AttachedTargetTypes" Grid.Column="1" Margin="5,5,5,5" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" Text="{Binding Path=Element.AttachedTargetTypes}" ToolTip="Please enter the Target Types as a common seperated list." />
			<pc:TextBox Name="AttachedAttributeTypes" Grid.Column="2" Margin="5,5,5,5" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" Text="{Binding Path=Element.AttachedAttributeTypes}" ToolTip="Please enter the Attribute Types as a common seperated list." />
		</Grid>
	</Border>
	<Grid Name="OptionsGrid" Grid.Row="4">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<ToggleButton Grid.Column="0" Grid.Row="0" Content="Is Data Member" Margin="2" Padding="2,0" Height="23" IsChecked="{Binding Path=Element.IsDataMember}" Name="IsDataMember" ToolTip="Determines if the member is marked as a member of the data contract." />
		<ToggleButton Grid.Column="1" Grid.Row="0" Content="Is Read-Only" Margin="2" Padding="2,0" Height="23" IsChecked="{Binding Path=Element.IsReadOnly}" Name="IsReadOnly" ToolTip="The member is read-only." />
		<ToggleButton Grid.Column="2" Grid.Row="0" Content="Is Required" Margin="2" Padding="2,0" Height="23" IsChecked="{Binding Path=Element.IsRequired}" IsEnabled="{Binding Path=Element.IsDataMember}" Name="IsRequired" ToolTip="The member is required by the data contract." />
		<ToggleButton Grid.Column="3" Grid.Row="0" Content="Emit Default Value" Margin="2" Padding="2,0" Height="23" IsChecked="{Binding Path=Element.EmitDefaultValue}" IsEnabled="{Binding Path=Element.IsDataMember}" Name="EmitDefaultValue" ToolTip="Force WCF emit the default value for the type if no value is provided." />
		<ToggleButton Grid.Column="4" Grid.Row="0" Content="Custom Client Type" Margin="2" Padding="2,0" Height="23" IsChecked="{Binding Path=Element.HasClientType}" IsEnabled="{Binding Path=Element.IsDataMember}" Name="HasClientType" ToolTip="Specifies a custom data type and name for the client contract." />
		<ToggleButton Grid.Column="0" Grid.Row="1" Content="Has WinForms Binding" Margin="2" Padding="2,0" Height="23" IsChecked="{Binding Path=Element.GenerateWinFormsSupport}" IsEnabled="{Binding Path=Element.IsDataMember}" Name="GenerateWinFormsSupport" ToolTip="Generates support for WinForms databinding." />
		<ToggleButton Grid.Column="1" Grid.Row="1" Content="Has XAML Binding" Margin="2" Padding="2,0" Height="23" IsChecked="{Binding Path=Element.HasXAMLType}" IsEnabled="{Binding Path=Element.IsDataMember}" Name="GenerateXAMLBinding" ToolTip="Tells WCF Architect to generate a WPF binding for this member." />
		<ToggleButton Grid.Column="2" Grid.Row="1" Content="Is XAML Attached" Margin="2" Padding="2,0" Height="23" IsChecked="{Binding Path=Element.IsAttached}" IsEnabled="{Binding Path=Element.HasXAMLType}" Name="IsAttached" ToolTip="Tells WCF Architect to generate an Attached WPF Binding for this member." />
	</Grid>
</Grid>